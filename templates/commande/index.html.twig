{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
<div class="container">
    <h1>Mes Commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Articles</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                <td>
                    <ul>
                    {% for detail in commande.commandeDetails %}
                        <li>
                            {{ detail.produit.nom }} ({{ detail.produit.taille }})
                            Ã— {{ detail.quantite }}
                        </li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <span class="badge badge-{{ commande.statut }}">
                        {{ commande.statut|title }}
                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}